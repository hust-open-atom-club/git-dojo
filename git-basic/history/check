# ---------- 校验逻辑 ----------

repo=$PWD                       # 必须在仓库目录运行
expected=$(cat /challenge/expected_commit)
current=$(git rev-parse HEAD)

if [[ "$current" == "$expected" ]]; then
  # 再保险：文件内容也应一致
  if grep -q "The flag is safe" answer.txt; then
    echo "✅ 恭喜！你成功回退到了正确版本。"
    echo -n "你的 flag 是："
    cat /flag
    exit 0
  fi
fi

echo "❌ 还没有回到正确提交！"
echo "(提示：git log 找到 commit，git checkout <hash>)"
exit 1

